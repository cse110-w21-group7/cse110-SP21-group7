{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": "*.test.js",
            "rules": {
                "no-unused-vars": "off",
                "no-useless-escape": "off"
            }
        }
    ]
}
