{
    "$id": "xxxxxxxx",
    "description": "A user's information for their bullet journal",
    "type": "object",
    "name": "string",
    "properties": {
      "collections": {
        "type": "array",
        "items": {
          "type": "string",
          "images": "image",
          "videos": "video"
        }
      }
    },
    /* change events to daily log and make daily log's children event and todo list */
    "$defs": {
      "events": {
        "type": "object",
        "required": [ "date", "time", "description" ],
        "properties": {
          "date": {
            "type": "date",
            "description": "The date of the event."
          },
          "time": {
            "type": "time",
            "description": "The time of the event."
          },
          "event": {
            "type": "string",
            "description": "Brief description of the event."
          },
          "todos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of todos for the day."
          },
          "mood": {
            "type": "number",
            "multipleOf": 1,
            "minimum": 0,
            "exclusiveMaximum": 100,
            "description": "Daily mood on a range of 0-99."
          }
        }
      }
    }
  }